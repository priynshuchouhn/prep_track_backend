{
  "compilerOptions": {
    "target": "ES6",                              
    "module": "ESNext",                         
    "rootDir": "./src",                           
    "moduleResolution": "node",                   
    "outDir": "./dist",                           
    "esModuleInterop": true,                      
    "forceConsistentCasingInFileNames": true,     
    "strict": true,                               
    "skipLibCheck": true,                          
  },
  "include": ["./src/**/*"],
  "exclude": ["./prisma"]
}